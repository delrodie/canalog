{% extends 'base.html.twig' %}

{% block title %}{{parent()}} Gestion des fournisseurs d'opérations{% endblock %}

{% block body %}
    <div class="jumbotron jumbotron-fluid text-left">
        <div class="container">
            <h1>Gestion des fournisseurs</h1>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="card shadow-sm p-3 mb-5 bg-white rounded">
                    <div class="card-body">
                        <div class="card-title mb-5"><h4 class="h4">Liste des fournisseurs</h4></div>
                        <table class="table table-striped">
                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>Nom</th>
                                <th>actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for fournisseur in fournisseurs %}
                                <tr>
                                    <td>{{ loop.index }}</td>
                                    <td>{{ fournisseur.nom }}</td>
                                    <td>
                                        <a href="{{ path('fournisseur_show', {'slug': fournisseur.slug}) }}"><i class="fa fa-eye"></i></a> |
                                        <a href="{{ path('fournisseur_edit', {'slug': fournisseur.slug}) }}"><i class="fa fa-edit"></i></a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="6">Aucun fournisseur enregistré</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-sm p-3 mb-5 bg-white rounded">
                    <div class="card-body">
                        <div class="card-title mb-5">
                            <h4 class="h4">Enregistrement</h4>
                        </div>
                        {{ include('fournisseur/_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
